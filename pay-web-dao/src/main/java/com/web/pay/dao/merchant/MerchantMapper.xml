<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.web.pay.dao.merchant.MerchantMapper">

	<sql id="table"> TBL_MERCHANT </sql>

	<resultMap id="beanMap" type="com.web.pay.pojo.merchant.Merchant">
		<id     property="merchantId" column="MERCHANTID" />
		<result property="loginname" column="LOGINNAME" />
		<result property="loginpwd" column="LOGINPWD" />
		<result property="merchantType" column="MERCHANTTYPE" />
		<result property="merchantName" column="MERCHANTNAME" />
		<result property="merchantStatus" column="MERCHANTSTATUS" />
		<result property="isMember" column="ISMEMBER" />
		<result property="iscertification" column="ISCERTIFICATION" />
	
	</resultMap>
    <!-- 登陆 -->
	<select id="findByLoginName" parameterType="java.util.Map" resultMap="beanMap">
		select * from
		<include refid="table" />
		<where>
			loginname=#{0}
			AND loginpwd=#{1}
		</where>
	</select>
    <!-- 查询用户信息-->
	<select id="queryMerchantInfo" parameterType="java.util.Map" resultMap="beanMap">
		select * from
		<include refid="table" />
		<where>
			loginname=#{0}
		</where>
	</select>
	
	<!-- 注册 -->
	<insert id="merchantRegister" parameterType="com.web.pay.pojo.merchant.Merchant" >
	   insert into TBL_MERCHANT(LOGINNAME,LOGINPWD)
	   VALUES(#{loginname},#{loginpwd})
	</insert>

	
</mapper>